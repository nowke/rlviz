{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "nowke/rlviz/grid",
  "type": "object",
  "title": "Grid JSON Schema",
  "description": "",
  "default": {},
  "required": [
    "name",
    "width",
    "height",
    "states"
  ],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "The name schema",
      "description": "Grid Name",
      "default": "",
      "examples": [
        "Classic 4x3"
      ]
    },
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The id schema",
      "description": "Unique ID for Grid",
      "default": "",
      "examples": [
        "GRID_CLASSIC_4x3"
      ]
    },
    "width": {
      "$id": "#/properties/width",
      "type": "integer",
      "title": "The width schema",
      "description": "Grid width",
      "default": 0,
      "examples": [
          5
      ]
    },
    "height": {
        "$id": "#/properties/height",
        "type": "integer",
        "title": "The height schema",
        "description": "Grid height",
        "default": 0,
        "examples": [
            4
        ]
    },
    "states": {
      "$id": "#/properties/states",
      "type": "object",
      "title": "The states schema",
      "description": "Grid states",
      "default": {},
      "required": [],
      "additionalProperties": true
    }
  }
}
